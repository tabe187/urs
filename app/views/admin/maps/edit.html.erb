<body>
  <div class="container">
    <div class="rowjustify-content-center text-center" style="padding: 10px">
       <h5><strong>マップ情報編集</strong></h5>
    </div>
    
    <div class="row justify-content-center">
      <div class="col-xl-7 justify-content-center text-left" style="padding: 10px" >
        <table>
          <tbody>
            <tr>
              <%= form_with model: @map, url: admin_map_path do |f| %>
                <div class="form-group">
                  <label>店名/場所</label><br>
                  <%= f.text_field :place_name, autofocus: true, autocomplete: "place_name",  class: 'form-control', size: "20x7" %>
                </div>
                <div class="form-group">
                  <label>市区町村</label><br>
                  <%= f.text_field :address, autofocus: true, autocomplete: "address",  class: 'form-control', size: "20x7" %>
                </div>
                <div class="form-group">
                  <label>ジャンル</label><br>
                  <%= f.select :types, Map.types.keys.map{|k| [I18n.t("enums.map.types.#{k}"), k]} %>
                </div>
                <div class="actions">
                  <%= f.submit '変更を保存' %>
                </div>
                <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
 </div>
</body>
