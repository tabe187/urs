
<div class="row justify-content-center">
  <h5><strong>会員一覧</strong></h5>
</div>
<div class="row justify-content-center">
  <div class="col-xl-10">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ID</th>
            <th>ユーザ名</th>
            <th>メールアドレス</th>
            <th>ユーザステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to admin_user_path(user.id) do %>
                <%= user.name %>
                <% end %>
            </td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_deleted == false %>
               有効
              <% else %>
               退会
              <% end %>
            </td>
            <td><%= link_to "編集", edit_admin_user_path(user.id) %></td>
          <% end %>
          <%= paginate @users %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
