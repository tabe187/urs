<head>
</head>

<main>
 <div class="container">
    <div class="row justify-content-end" >
      <%= search_form_for @users_q, url: search_users_path do |f| %>
        <%= f.label :name_cont, 'ユーザー検索' %>
        <%= f.search_field :name_or_region_or_city_cont %>
        <%= f.submit '検索' %>
      <% end %>
    </div>
    <div class="row justify-content-center">
      <h5><strong>ユーザ 一覧</strong></h5><br>
    </div>
    <div class="row">
      <table class="table">
        <tbody>
            <% @users.each do |user| %>
            <div class="col-xl-2 justify-content-center text-center" >
              <% if user.profile_image.attached? %>
                <%= link_to user_path(user.id) do %>
                  <div class="flex-item">
                    <div class="image-wrap">
                       <%= image_tag user.get_profile_image(100,100) %><br>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <%= link_to user_path(user.id) do %>
                  <div class="flex-item">
                    <div class="image-wrap">
                      <%= image_tag 'no_image.jpg', size: "100x100" %>
                    </div>
                  </div>
                <% end %>
              <% end %>
                <%= user.name %><br>
            </div>
              <% end %>
        </tbody>
      </table>
    </div>
    <div class="row justify-content-center">
      <%= paginate @users %>
    </div>
</main>
