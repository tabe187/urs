<head>
</head>

<main>
  <div class="container">
    <div class="row">
      <h5>フォロー一覧</h5><br>
    </div>
    <div class="row">
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
            <div class="col-xl-2 justify-content-center text-center " >
              <% if user.profile_image.attached? %>
                <div class="flex-item">
                  <div class="image-wrap">
                    <%= link_to user_path(user.id) do %>
                       <%= image_tag user.get_profile_image(50,50) %>
                    <% end %>
                  </div>
                </div>
              <% else %>
                <div class="flex-item">
                  <div class="image-wrap">
                    <%= link_to user_path(user.id) do %>
                        <%= image_tag 'no_image.jpg', size: "50x50" %>
                    <% end %>
                  </div>
                </div>
              <% end %>    
                      <%= user.name %>
            </div>  
          <% end %>  
        </tbody>
      </table>
    </div>
  </div>
</main>


