<head>
</head>

<main>
  <div class="container">
    <div class="rowjustify-content-center text-center" style="padding: 10px">
       <h5>会員情報編集</h5>
    </div>
    
    <div class="row justify-content-center">
      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    

    <div class="row justify-content-center">
      <div class="col-xl-7 justify-content-center text-left" style="padding: 10px" >
        <table>
          <tbody>
            <tr>
              <%= form_with model: @user, url: user_path do |f| %>
                <div class="form-group">
                  <label>ユーザーネーム</label><br>
                  <%= f.text_field :name, autofocus: true, autocomplete: "name",  class: 'form-control', size: "20x7" %>
                </div>
                <div class="form-group">
                  <%= f.file_field :profile_image, accept: "image/*" %>
                </div>
                <div class="form-group">
                  <label>メールアドレス</label><br>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: 'form-control', size: "20x7" %>
                </div>
                <div class="form-group">
                  <label>都道府県</label><br>
                  <%= f.text_field :region, autofocus: true, autocomplete: "region" %>
                </div>
                <div class="form-group">
                  <label>市区町村</label><br>
                  <%= f.text_field :city, autofocus: true, autocomplete: "city" %>
                </div>

                <div class="form-group">
                  <label>生年月日</label><br>
                  <%= f.text_field :birthday_year, autofocus: true, autocomplete: "birthday_year" %>年<%= f.text_field :birthday_month, autofocus: true, autocomplete: "birthday_month" %>月<%= f.text_field :birthday_day, autofocus: true, autocomplete: "birthday_day" %>日
                </div>
                <div class="form-group">
                  <label>性別</label><br>
                  <%= f.radio_button :gender, :man, checked: "checked" %>
                  <%= f.label User.genders_i18n[:man] %>
                  <%= f.radio_button :gender, :woman %>
                  <%= f.label User.genders_i18n[:woman] %>
                </div>
                <div class="form-group">
                  <label>趣味</label><br>
                  <%= f.text_field :hobby, autofocus: true, id:"inputHobby", placeholder:"趣味",  class: 'form-control', size: "20x7" %>
                </div>
                <div class="form-group">
                  <label>自己紹介</label><br>
                  <%= f.text_area :profile, autofocus: true, id:"inputProfile", placeholder:"自己紹介",  class: 'form-control', size: "20x7" %>
                </div>
                <div class="actions">
                  <%= f.submit '変更を保存' %>
                </div>
              <% end %>
                <div class="actions" style="margin: 10px;">
                  <%= link_to users_mypage_withdrawal_path, class: "btn-sm btn-secondary"  do %>
                    退会する
                  <% end %>
                </div>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
 </div>
</main>