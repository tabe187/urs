<%= form_with model: @community, url: community_path do |f| %>
      <label for="inputCommunity_image">コミュニティ画像</label><br>
      <%= f.file_field :community_image, accept: "image/*" %><br>
      <label for="inputname">商品画像</label><br>
      <%= f.file_field :item_image, accept: "image/*" %><br>
      <label for="inputTitle">タイトル</label><br>
      <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル" %><br>
      <label for="inputCategory_id">コミュニティカテゴリ</label><br>
　　　<%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name), autofocus: true, id:"inputCategory_id", placeholder: @community.category.name %><br>
      <label for="inputExplanation">コミュニティ説明</label><br>
      <%= f.text_area :explanation, autofocus: true, id:"inputExplanation", placeholder:"コミュニティ説明" %><br>

      <%= f.submit '変更を保存' %>
    <% end %>