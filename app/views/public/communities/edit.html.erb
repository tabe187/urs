<head>
</head>

<main>
  <div class="container">
    <div class="rowjustify-content-center text-center" style="padding: 10px">
       <h5>コミュニティ設定内容編集</h5>
    </div>
    
    <div class="row justify-content-center">
      <% if @community.errors.any? %>
        <%= @community.errors.count %>件のエラーが発生しました
        <ul>
          <% @community.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

　　<div class="row justify-content-center">
      <div class="col-xl-7 justify-content-center text-left" style="padding: 10px" >
        <table>
          <tbody>
            <tr>
              <%= form_with model: @community, url: community_path do |f| %>
                <div class="form-group">
                  <label>コミュニティタイトル</label><br>
                  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル",  class: 'form-control', size: "20x7" %>
                </div>
                <div class="form-group">
                  <label>コミュニティカテゴリ</label><br>
                  　<%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name), autofocus: true, id:"inputCategory_id", placeholder: @community.category.name %>
                </div>
                <div class="form-group">
                  <label>コミュニティ説明</label><br>
                  <%= f.text_area :explanation, autofocus: true, id:"inputExplanation", placeholder:"コミュニティ説明",  class: 'form-control', size: "20x7" %><br>
                </div>
                
                <div class="form-group">
                  <%= f.file_field :community_image, accept: "image/*" %>
                </div>
                
                <div class="actions">
                  <%= f.submit '変更を保存' %>
                </div>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
 </div>
</main>
